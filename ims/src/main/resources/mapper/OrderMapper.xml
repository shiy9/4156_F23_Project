<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ims.mapper.OrderMapper">
    <resultMap id="orderMap" type="Order">
        <id property="orderId" column="order_id"/>
        <result property="userId" column="user_id"/>
        <result property="type" column="type"/>
        <result property="itemId" column="item_id"/>
        <result property="itemLocationId" column="item_location_id"/>
        <result property="quantity" column="quantity"/>
        <result property="orderDate" column="order_date"/>
        <result property="amount" column="amount"/>
        <result property="dueDate" column="due_date"/>
        <result property="returnDate" column="return_date"/>
        <result property="orderStatus" column="order_status"/>
    </resultMap>

    <select id="retrieveOrderById" resultMap="orderMap">
        SELECT order_id, user_id, type, order_date, status
        FROM Orders
        WHERE order_id = #{orderId}
    </select>

    <select id="retrieveOrdersByUserId" resultMap="orderMap">
        SELECT order_id, user_id, type, order_date, status
        FROM Orders
        WHERE user_id = #{userId}
    </select>

    <select id="retrieveOrdersByItemId" resultMap="orderMap">
        SELECT order_id, user_id, type, order_date, status
        FROM Orders
        WHERE item_id = #{itemId}
    </select>

    <insert id="insert" parameterType="Order" useGeneratedKeys="true" keyProperty="orderId" keyColumn="order_id">
        INSERT INTO Orders (user_id, type, order_date, status)
        VALUES (#{userId}, #{type}, #{orderDate}, #{orderStatus})
    </insert>

    <update id="update" parameterType="Order">
        UPDATE Orders
        SET user_id = #{userId}, type = #{type}, order_date = #{orderDate}, status = #{orderStatus}
        WHERE order_id = #{orderId}
    </update>

    <delete id="delete">
        DELETE FROM Orders WHERE order_id = #{orderId}
    </delete>
</mapper>
